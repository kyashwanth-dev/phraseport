# Copy to .env and edit values as needed
# PORT the server listens on
PORT=3000

# Where uploaded files are stored (absolute or relative path)
STORAGE_DIR=./storage

# Where the JSON DB file is stored
DATA_FILE=./db.json

# Bcrypt salt rounds (higher => more CPU work when hashing)
PASSCODE_SALT_ROUNDS=10

# Rate limiting (ms and max requests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
HOST_RATE_LIMIT_MAX=10

# If behind a reverse proxy, set to 1 to enable trust proxy
TRUST_PROXY=0
